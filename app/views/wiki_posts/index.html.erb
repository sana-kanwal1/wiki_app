<p style="color: green"><%= notice %></p>

<h1>Wiki posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Description</th>
      <th>Created at</th>
      <th>Updated at</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @wiki_posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.author.name %></td>
        <td><%= post.description %></td>
        <td><%= post.created_at.strftime('%B %d, %Y') %></td>
        <td><%= post.updated_at.strftime('%B %d, %Y') %></td>
        <td>
          | <%= link_to 'View', wiki_post_path(post) %> |
          <%= link_to 'Edit', edit_wiki_post_path(post) %> |
          <%= link_to 'Delete', post, data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete #{post.title}?" } %> |
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

| <%= link_to "New wiki post", new_wiki_post_path %> |
